{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"jsx": "react",
		"experimentalDecorators": true,
		"noImplicitUseStrict": true,
		"removeComments": true,
		"moduleResolution": "node",
		"lib": ["es2017", "dom"],
		"typeRoots": ["node_modules/@types", "src/@types"]
	},
	"exclude": ["node_modules", "out", ".next"]
}
